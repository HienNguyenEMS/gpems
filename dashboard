    <script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- Sidebar Toggle for Mobile ---
        const menuToggle = document.getElementById('mobile-menu-toggle');
        if (menuToggle) {
            menuToggle.addEventListener('click', () => {
                document.body.classList.toggle('sidebar-open');
            });
        }
        
        // --- Learning Activity Chart ---
        const ctx = document.getElementById('learningActivityChart');
        if (ctx) {
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'CN'],
                    datasets: [{
                        label: 'Số giờ học',
                        data: [1.5, 2, 0.5, 3, 1, 4, 2.5], // Sample data
                        backgroundColor: 'rgba(0, 202, 235, 0.6)',
                        borderColor: 'rgba(0, 202, 235, 1)',
                        borderWidth: 1,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return ` ${context.parsed.y} giờ`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Giờ'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }

        // Auto-close sidebar on larger screens if it was left open on mobile
        const checkSidebarState = () => {
            if (window.innerWidth > 991) {
                document.body.classList.add('sidebar-open');
            } else {
                 document.body.classList.remove('sidebar-open');
            }
        };
        
        window.addEventListener('resize', checkSidebarState);
        checkSidebarState(); // Initial check
    });
    </script>
